{
    "name": "backend",
    "version": "1.0.0",
    "description": "Task & Team Management API Backend",
    "main": "src/server.js",
    "scripts": {
        "start": "node src/server.js",
        "dev": "nodemon src/server.js",
        "test": "NODE_ENV=test jest --coverage --detectOpenHandles --forceExit",
        "test:unit": "NODE_ENV=test jest --testPathPattern=tests/unit --coverage",
        "test:integration": "NODE_ENV=test jest --testPathPattern=tests/integration --coverage",
        "lint": "eslint src/ tests/",
        "lint:fix": "eslint src/ tests/ --fix",
        "seed": "node src/scripts/seed.js",
        "swagger:validate": "swagger-cli validate src/docs/openapi.json"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-mongo-sanitize": "^2.2.0",
        "express-rate-limit": "^7.1.5",
        "helmet": "^7.1.0",
        "joi": "^17.11.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.0.3",
        "morgan": "^1.10.0",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.0",
        "uuid": "^9.0.1",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "eslint": "^8.56.0",
        "jest": "^29.7.0",
        "mongodb-memory-server": "^9.1.4",
        "nodemon": "^3.0.2",
        "supertest": "^6.3.3",
        "swagger-cli": "^4.0.4"
    },
    "jest": {
        "testEnvironment": "node",
        "coverageDirectory": "coverage",
        "collectCoverageFrom": [
            "src/**/*.js",
            "!src/server.js",
            "!src/scripts/**"
        ],
        "setupFilesAfterEnv": [
            "./tests/setup.js"
        ]
    }
}